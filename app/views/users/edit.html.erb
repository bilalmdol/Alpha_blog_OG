<h1> Edit your Profile </h1>

<%= render "shared/errors", obj: @user %>

<%= form_with model: @user, local: true, data: { turbo: false } do |f| %>
    <p>
        <%= f.label :Username %></br>
        <%= f.text_field :username %></br>
    </p>

    <p>
        <%= f.label :Email %></br>
        <%= f.text_field :email %></br>
    </p>

    <p>
        <%= f.label :Password %></br>
        <%= f.text_field :password %></br>
    </p>

    <p>
        <%= f.submit "Edit" %>
    </p>
<% end %>


<p>
    <%= link_to "Back", users_path %>
</p>